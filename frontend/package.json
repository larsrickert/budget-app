{
  "name": "@larsrickert/budget-app",
  "version": "1.0.1",
  "packageManager": "pnpm@8.11.0",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:e2e": "cypress open",
    "test:e2e:ci": "cypress run",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.ts --fix --ignore-path .gitignore",
    "storybook": "storybook dev -p 6006 --no-open",
    "prepare": "simple-git-hooks",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@fontsource/montserrat": "^5.0.15",
    "@tsconfig/node20": "^20.1.2",
    "@vueuse/core": "^10.6.1",
    "chart.js": "^4.4.0",
    "dayjs": "^1.11.10",
    "element-plus": "^2.4.3",
    "fast-deep-equal": "^3.1.3",
    "pinia": "^2.1.7",
    "pocketbase": "~0.19.0",
    "svg-country-flags": "^1.2.10",
    "vue": "^3.3.9",
    "vue-chartjs": "^5.2.0",
    "vue-i18n": "^9.8.0",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@intlify/unplugin-vue-i18n": "^1.5.0",
    "@rushstack/eslint-patch": "^1.6.0",
    "@storybook/addon-essentials": "^7.6.1",
    "@storybook/vue3": "^7.6.1",
    "@storybook/vue3-vite": "^7.6.1",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.10.1",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.3",
    "@vue/tsconfig": "~0.4.0",
    "cypress": "^13.6.0",
    "eslint": "^8.54.0",
    "eslint-plugin-storybook": "~0.6.15",
    "eslint-plugin-vue": "^9.18.1",
    "jsdom": "^23.0.0",
    "lint-staged": "^15.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "sass": "^1.69.5",
    "simple-git-hooks": "^2.9.0",
    "storybook": "^7.6.1",
    "typescript": "~5.3.2",
    "unplugin-element-plus": "~0.8.0",
    "vite": "^5.0.4",
    "vitest": "~0.34.6",
    "vue-tsc": "^1.8.24"
  },
  "simple-git-hooks": {
    "pre-commit": "cd frontend && pnpm lint-staged"
  },
  "lint-staged": {
    "*.{vue,js,ts}": "eslint --fix --ignore-path .gitignore"
  }
}
