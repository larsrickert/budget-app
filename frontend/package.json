{
  "name": "template-vue",
  "version": "0.0.1",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "test:unit": "vitest --environment jsdom",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.ts --fix --ignore-path .gitignore",
    "update": "npx npm-check-updates -i",
    "storybook": "storybook dev -p 6006 --no-open",
    "prepare": "cd .. && husky install frontend/.husky"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.0.10",
    "@fontsource/montserrat": "^4.5.13",
    "@vueuse/core": "^9.6.0",
    "chart.js": "^4.0.1",
    "element-plus": "^2.2.25",
    "pinia": "^2.0.27",
    "pocketbase": "^0.8.3",
    "vue": "^3.2.45",
    "vue-chartjs": "^5.0.0",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@intlify/unplugin-vue-i18n": "^0.8.0",
    "@storybook/addon-essentials": "^7.0.0-alpha.54",
    "@storybook/addon-interactions": "^7.0.0-alpha.54",
    "@storybook/addon-links": "^7.0.0-alpha.54",
    "@storybook/vue3": "^7.0.0-alpha.54",
    "@storybook/vue3-vite": "^7.0.0-alpha.54",
    "@types/jsdom": "^20.0.1",
    "@types/node": "^18.11.9",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/test-utils": "^2.2.4",
    "@vue/tsconfig": "^0.1.3",
    "eslint": "^8.28.0",
    "eslint-plugin-vue": "^9.8.0",
    "husky": "^8.0.2",
    "jsdom": "^20.0.3",
    "lint-staged": "^13.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.0",
    "sass": "^1.56.1",
    "storybook": "^7.0.0-alpha.54",
    "typescript": "~4.9.3",
    "unplugin-element-plus": "^0.4.1",
    "vite": "^3.2.4",
    "vitest": "^0.25.3",
    "vue-tsc": "^1.0.9"
  },
  "lint-staged": {
    "*.{vue,js,ts}": "eslint --cache --fix --ignore-path .gitignore"
  }
}
