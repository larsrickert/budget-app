{
  "name": "@larsrickert/budget-app",
  "version": "1.0.1",
  "packageManager": "pnpm@8.6.6",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:e2e": "cypress open",
    "test:e2e:ci": "cypress run",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.ts --fix --ignore-path .gitignore",
    "storybook": "storybook dev -p 6006 --no-open",
    "prepare": "simple-git-hooks",
    "preinstall": "npx only-allow pnpm"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.1.0",
    "@fontsource/montserrat": "^5.0.4",
    "@vueuse/core": "^10.2.1",
    "chart.js": "^4.3.0",
    "dayjs": "^1.11.9",
    "element-plus": "^2.3.7",
    "fast-deep-equal": "^3.1.3",
    "pinia": "^2.1.4",
    "pocketbase": "~0.15.2",
    "svg-country-flags": "^1.2.10",
    "vue": "^3.3.4",
    "vue-chartjs": "^5.2.0",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@intlify/unplugin-vue-i18n": "~0.12.1",
    "@storybook/addon-essentials": "^7.0.26",
    "@storybook/vue3": "^7.0.26",
    "@storybook/vue3-vite": "^7.0.26",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^18.16.19",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.4.0",
    "@vue/tsconfig": "~0.1.3",
    "cypress": "^12.17.0",
    "eslint": "^8.44.0",
    "eslint-plugin-storybook": "~0.6.12",
    "eslint-plugin-vue": "^9.15.1",
    "jsdom": "^22.1.0",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "sass": "^1.63.6",
    "simple-git-hooks": "^2.8.1",
    "storybook": "^7.0.26",
    "typescript": "~4.9.5",
    "unplugin-element-plus": "~0.7.2",
    "vite": "^4.4.2",
    "vitest": "~0.33.0",
    "vue-tsc": "^1.8.4"
  },
  "simple-git-hooks": {
    "pre-commit": "cd frontend && npx lint-staged"
  },
  "lint-staged": {
    "*.{vue,js,ts}": "eslint --fix --ignore-path .gitignore"
  }
}
