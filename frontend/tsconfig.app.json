{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "index.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/i18n/locales/en.json"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
